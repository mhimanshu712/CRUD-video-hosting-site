<html>
    <head>
        <title>Myjunoon</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">
        <link rel="stylesheet" href="/css/modmain.css">
        <link rel="stylesheet" href="/css/modnav.css">
    </head>

    <body>
                 
        

        <div class="ui sidebar inverted vertical menu">
            <h2 class="ui inverted header">
                <img src="https://semantic-ui.com/images/avatar2/large/patrick.png" class="ui circular image">
                Guest
              </h2>
              <br>

    
            <a class="item">
              <i class="youtube icon"></i>
              We On Youtube
            </a>

            <a class="item">
              <i class="microphone icon"></i>
              Nominate A Speaker
            </a>

            <a class="item">
              <i class="logout icon"></i>
              Logout
            </a>
        </div>
        <div class="pusher">
            <!-- Site content !-->
              <!--Top Nav-->
              <div class="ui fixed inverted menu">
                <a class=" item" onclick="sidebar()">
                  <i class="bars icon" id="navbar"></i>
                </a>
                
                <img  src="/images/logomin.png" height="40px" alt="logo">

                <a class="item  right">
                    <i class="bell icon" id="navbar"></i>
                </a>
              
               </div> 

               <br>
               <!--Video Category-->
               
                  <div class="ui top inverted  segment" >
                      <div class="ui fluid secondary inverted three item  pointing menu" >
                        <a class="
                        <% if(vidcat==1){ %>
                          active
                        <% } %>
                        item" href="/">
                          Recommended
                        </a>
                        <a class="
                        <% if(vidcat==2){ %>
                          active
                          <% } %>
                        item" href="/latest">
                          Latest
                        </a>
                        <a class="
                        <% if(vidcat==3){ %>
                          active
                        <% } %>
                        item" href="/mostviewed">
                          Most Viewed
                        </a>
                      </div>
                    </div>

                     <!--Bottom Nav-->
                    <div id="bottombar" class="ui labeled tiny inverted bottom fixed icon three item menu">
                          <a class="item">
                            <i class="home red icon"></i>
                            Home
                          </a>
                          <a class="item" href="/guestmoderror">
                            <i class="compass red icon"></i>
                            Discover
                          </a>
                          <a class="item" href="/guestmoderror">
                            <i class="folder red icon"></i>
                            Library
                          </a>
                    </div>

               
               

            <!--Menue Ends Here-->

            
            <br>
            <div class="ui container">
                <div class="ui three stackable cards">
                  <% vidlis.forEach(function(vid){ %>
                    <div class="card">
                      <div class="image">
                        <img src="
                        /videoimg/<%= vid.image %>     
                        " onclick="window.location.href='/video/5d28b9650986141394f9fd3c'">
                      </div>
                      <div class="content">
                        <div class="description">
                          <%= vid.title %>
                        </div>
                      </div>
                      <div class="extra content">
                          <a>
                              <i class="users icon"></i>
                              <%= vid.views %> Views
                            </a>
                      </div>
                    </div>
                    <% }); %>
                  </div>

            </div>
            
            

</div>
   
      <br><br><br><br><br>
      <script src="/js/jquery-3.4.1.min.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.js" ></script>
      <script>
        function sidebar(){
          $('.ui.sidebar').sidebar('toggle');
        }
      </script>
    </body>
</html>